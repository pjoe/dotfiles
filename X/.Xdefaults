#URxvt*font: xft:DejaVu Sans Mono for Powerline:pixelsize=14:antialias=true:hinting=true
URxvt*font: xft:DejaVu Sans Mono:size=11:antialias=true:hinting=true:hintstyle=hintslight
URxvt*letterSpace: -1

# Dynamic font changing
URxvt.keysym.C-0: command:\033]710;xft:DejaVu Sans mono:size=11:antialias=true:hinting=true:hintstyle=hintslight\007
URxvt.keysym.C-plus: command:\033]710;xft:DejaVu Sans mono:size=16:antialias=true:hinting=true:hintstyle=hintslight\007
URxvt.keysym.C-minus: command:\033]710;xft:DejaVu Sans mono:size=8:antialias=true:hinting=true:hintstyle=hintslight\007

URxvt.geometry: 170x45

# disable scrollbar
URxvt.scrollBar: false
# scrollbar position - left=false (default) or right=true
URxvt*scrollBar_right: true
# scrollbar style - rxvt (default), plain, next, or xterm
URxvt*scrollstyle: plain

URxvt.keysym.Control-Up: \033[1;5A
URxvt.keysym.Control-Down: \033[1;5B
URxvt.keysym.Control-Left: \033[1;5D
URxvt.keysym.Control-Right: \033[1;5C

URxvt*dynamicColors: on
